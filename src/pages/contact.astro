---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contacto',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contacto" title="Hablemos de tu software" />

  <ContactUs
    id="form"
    title="Cuéntanos qué necesitas"
    subtitle="Somos un equipo de producto y tecnología. Escríbenos sobre tu SaaS, plataforma o app y te respondemos con el siguiente paso."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Nombre',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
    ]}
    textarea={{
      label: 'Mensaje',
    }}
    disclaimer={{
      label: 'Al enviar este formulario aceptas que te contactemos sobre tu solicitud.',
    }}
    description="Respondemos en menos de un día hábil."
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="El equipo correcto para tu proyecto"
    items={[
      {
        title: 'Proyectos y entregas',
        description:
          'Define con nosotros el alcance, roadmap y stack. Trabajamos web, móvil, POS y backend con squads completos.',
      },
      {
        title: 'Ventas y estimaciones',
        description: 'Cotiza un MVP, una nueva vertical o soporte de producción. Enviamos tiempos y costos estimados.',
      },
      {
        title: 'Soporte técnico',
        description: 'Integraciones, despliegues, CI/CD, monitoreo y hardening para tu producto en producción.',
      },
      {
        title: 'Teléfono',
        description: '+1 (234) 567-890',
        icon: 'tabler:headset',
      },
      {
        title: 'Email',
        description: 'hola@llamadevs.com',
        icon: 'tabler:mail',
      },
      {
        title: 'Ubicación',
        description: 'Remoto · LATAM / EEUU',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
